{
  "app": {
    "name": "PDF2MD Converter",
    "version": "1.0.0"
  },
  "window": {
    "width": 1000,
    "height": 700,
    "minWidth": 800,
    "minHeight": 600,
    "backgroundColor": "#f5f5f5",
    "titleBarStyle": "hiddenInset",
    "frame": true
  },
  "fileDialogs": {
    "defaultPath": "",
    "multiSelections": true,
    "fileFilters": {
      "pdf": {
        "name": "PDF Documents",
        "extensions": ["pdf"]
      },
      "markdown": {
        "name": "Markdown Files",
        "extensions": ["md", "markdown"]
      },
      "html": {
        "name": "HTML Files",
        "extensions": ["html", "htm"]
      },
      "docx": {
        "name": "Word Documents",
        "extensions": ["docx"]
      },
      "all": {
        "name": "All Files",
        "extensions": ["*"]
      }
    }
  },
  "converters": {
    "maxThreads": 4,
    "tempDirectory": "./temp",
    "outputDirectory": ""
  },
  "logging": {
    "electronLogLevel": "info",
    "saveConsoleOutput": true,
    "maxLogFiles": 30
  },
  "updates": {
    "checkForUpdatesOnStartup": true,
    "autoDownload": false
  },
  "developerMode": false
}
