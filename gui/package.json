{
  "name": "aichemist-transmutation-codex",
  "version": "1.1.0",
  "description": "AiChemist Transmutation Codex - Professional Document Conversion Tool",
  "author": {
    "name": "AiChemist",
    "email": "support@aichemist.app",
    "url": "https://aichemist.app"
  },
  "homepage": "https://aichemist.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/savagelysubtle/AiChemistTransmutations.git"
  },
  "license": "Apache-2.0",
  "private": true,
  "main": "dist-electron/main/main.js",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --kill-others \"npm run dev:frontend\" \"npm run dev:python\"",
    "dev:frontend": "vite",
    "dev:python": "nodemon --watch ../src --ext py --exec \"echo Python files changed, restart your Electron app to see changes\"",
    "dev:fullstack": "concurrently -n \"Frontend,Python,Electron\" -c \"cyan,yellow,green\" --kill-others-on-fail --kill-others --raw \"npm run dev:frontend\" \"npm run watch:python\" \"npm run electron:dev\"",
    "watch:python": "nodemon --watch ../src --ext py --delay 1 --exec \"cd .. && uv sync\"",
    "prebuild": "node scripts/copy-assets.js",
    "build": "vite build && electron-builder",
    "build:full": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "start:dev": "vite",
    "start": "electron-vite preview",
    "electron:dev": "node scripts/electron-with-cleanup.js",
    "electron:build": "node scripts/copy-assets.js && vite build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "generate-all-icons": "node build/icons/generate-all-icons.js"
  },
  "dependencies": {
    "caniuse-lite": "^1.0.30001754",
    "clsx": "^2.1.1",
    "electron-squirrel-startup": "^1.0.1",
    "lucide-react": "^0.511.0",
    "mdx-to-md": "^0.5.2",
    "react": "^18.3.1",
    "react-custom-scrollbars-2": "4.5.0",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^31.2.1",
    "electron-builder": "^25.0.3",
    "electron-vite": "^3.1.0",
    "eslint": "^9.27.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.8",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.39",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.4",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.aichemist.transmutationcodex",
    "productName": "AiChemist Transmutation Codex",
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "public/**/*",
      "../THIRD-PARTY-LICENSES.md",
      "../LICENSE-NOTICE.txt"
    ],
    "extraResources": [
      {
        "from": "../src/transmutation_codex",
        "to": "python-backend/transmutation_codex",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://aichemist.app/releases"
      }
    ],
    "electronUpdaterCompatibility": ">=5.0.0",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false,
      "publisherName": "AiChemist",
      "rfc3161TimeStampServer": "http://timestamp.digicert.com",
      "timeStampServer": "http://timestamp.digicert.com"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "AiChemist Transmutation Codex",
      "license": "../LICENSE-NOTICE.txt",
      "perMachine": false,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "displayLanguageSelector": false,
      "menuCategory": true,
      "language": "1033",
      "multiLanguageInstaller": false,
      "packElevateHelper": true,
      "removeDefaultUninstallWelcomePage": false,
      "uninstallDisplayName": "AiChemist Transmutation Codex",
      "warningsAsErrors": false,
      "differentialPackage": false,
      "artifactName": "${productName} Setup ${version}.${ext}",
      "guid": "c3e3c3f3-3c3e-4c3e-8c3e-3c3e3c3e3c3e",
      "include": "build/nsis/installer.nsh",
      "installerHeader": "assets/icon.ico",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerSidebar": null,
      "uninstallerSidebar": null
    },
    "appx": {
      "applicationId": "AiChemist.TransmutationCodex",
      "displayName": "AiChemist Transmutation Codex",
      "publisherDisplayName": "AiChemist",
      "publisher": "CN=AiChemist",
      "identityName": "AiChemist.TransmutationCodex",
      "backgroundColor": "#6366F1",
      "languages": [
        "en-US"
      ],
      "addAutoLaunchExtension": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
