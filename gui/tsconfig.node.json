{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"]
  },
  "include": [
    "vite.config.ts",
    "electron.vite.config.ts",
    "src/main/main.ts",
    "src/main/preload.ts",
    "src/converters/mdxToMd.ts",
    "tailwind.config.js",
    "postcss.config.js"
  ]
}
